<div class='next'>
<ul> 
<li><%= @recipe.name %></li>
<li><%= @recipe.preparation_time %></li>
<li><%= @recipe.cooking_time %></li>
<li><%= @recipe.description %></li>
</ul>
<% if @recipe.user == current_user %>
  <%= link_to "Add ingredient", new_recipe_recipe_food_path(@recipe) %>
<% end %>

<% @recipe_foods.each do |recipe_food| %>
  <p><%= recipe_food.food.name %></p>
  <p><%= recipe_food.quantity %></p>
  <p><%= recipe_food.quantity * recipe_food.food.price %></p>
  <%= button_to 'Remove', recipe_recipe_food_path(@recipe, recipe_food), data: {turbo_confirm: 'are you sure'}, method: :delete %>
<% end %>
</div>